<div class='modal'>
    <div class='modal-wrapper'>
        <div class='img-container'>
            <img class='modal-img' src='https://image.tmdb.org/t/p/w500/{{poster_path}}' alt='{{title}}'
                data-id='{{id}}' />
        </div>
        <div class='modal-info'>
            <h2 class='modal-title'>{{title}}</h2>

            <table class="modal-table">
                <tbody>
                    <tr>
                        <th class="modal-table__descr">Vote/Votes</th>
                        <td class="modal-table__value">{{vote_average}} / {{vote_count}}</td>
                    </tr>
                    <tr>
                        <th class="modal-table__descr">Popularity</th>
                        <td class="modal-table__value">{{popularity}}</td>
                    </tr>
                    <tr>
                        <th class="modal-table__descr">Original Title</th>
                        <td class="modal-table__value">{{original_title}}</td>
                    </tr>
                    <tr>
                        <th class="modal-table__descr">Genre</th>
                        <td class="modal-table__value">
                            {{#each genres}}
                            <span class='sub-genre'> {{this.name}} </span>
                            {{/each}}
                        </td>
                    </tr>
                </tbody>
            </table>
            <p class='modal-review'>{{overview}}</p>

            <div class='modal-btn-wrapper'>
                    <button class='modal-btn__watched' type='button' data-id='{{id}}' id='open'>Add
                    to Watched</button>

                    <button class='modal-btn__queue' type='button' data-id='{{id}}' id='open'>Add
                    to Queue</button>
            </div>
        </div>
    </div>
</div>


